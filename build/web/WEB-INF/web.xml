<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    
    <servlet>
        <servlet-name>IdeaBrokerServlet</servlet-name>
        <servlet-class>IdeaBroker.IdeaBrokerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IdeaBrokerServlet</servlet-name>
        <url-pattern>/IdeaBrokerServlet</url-pattern>
    </servlet-mapping>
	
    <session-config>
        <session-timeout>
          60
        </session-timeout>
    </session-config>
	<Context override="true" reloadable="false" docBase="//localhost/logfiles/tests" />
</web-app>
